<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet"   
          href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
    <link href="~/CSS/StyleSheet.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Adamina|Alfa+Slab+One|Shrikhand" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/Home/Index">Home</a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li><a href="~/users/register">Sign up</a></li> }
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li><a href="~/users/login">Sign in</a></li>}
                    <li><a href="~/rooms/index">Rooms</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a href="~/users/logout">Log out</a></li>
                        <li><a href="~/users/detail"> Hi, @User.Identity.Name.ToUpper()</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>

    <footer class="footer">
        <div class="container-fluid">
           <p><span class="glyphicon glyphicon-copyright-mark"></span> 2017 Hotel ASP Core AB. All rights reserved.</p>
           <p>Södra Blasieholmshamnen 8, 103 27 Stockholm</p>
           <p>Phone: +46 (0)8 - 679 35 00, Fax: +46 (0)8 - 611 86 86</p>
           <p>info@hotelaspcore.se</p>
        </div>
    </footer>
    @RenderSection("scripts", false)
</body>
</html>