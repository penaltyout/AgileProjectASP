@using BookingWebsite.Models.Entities;
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model Customer[]
<!DOCTYPE html>
<html>
    <head>
        <title>Customer list</title>
    </head>
    <body>
        <h1>List of customers</h1>
            @foreach (var item in Model)
            {
                <ul>
                    <li><a asp-controller="Customers" asp-action="Detail" asp-route-id="@item.CustomerId">@item.FirstName @item.LastName</a></li>
                </ul>
            }
        <p><h4><a href="~/Home/Index">Back to main page</a></h4></p>
    </body>
</html>

