@model UsersRegisterVM

<div class="title">Sign up</div>
<div class="subtitle">Have you joined us yet? Please fill in the form for your membership!</div><br />

<div class="container">
    <form asp-controller="users" asp-action="register">
        <div class="form-group row">
            <label asp-for="Username" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Username" />
                <span style="color: red" asp-validation-for="Username"></span> <br />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Password" />
                <span style="color: red" asp-validation-for="Password"></span> <br />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="FirstName" />
                <span style="color: red" asp-validation-for="FirstName"></span> <br />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="LastName" />
                <span style="color: red" asp-validation-for="LastName"></span> <br />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="AddressLine1" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="AddressLine1" />
                <span style="color: red" asp-validation-for="AddressLine1"></span> <br />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="AddressLine2" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="AddressLine2" />
                <span style="color: red" asp-validation-for="AddressLine2"></span> <br />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ZipCode" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ZipCode" />
                <span style="color: red" asp-validation-for="ZipCode"></span> <br />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="City" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="City" />
                <span style="color: red" asp-validation-for="City"></span> <br />
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-primary" value="Change"> Join </button> <button type="reset" class="btn btn-primary" value="cancel"> Reset </button>
            </div>
        </div>
    </form>
</div>

@section scripts {
    
        <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.1.0.js"></script>
        <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.js"></script>
        <script src="http://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.js"></script>
  
    
        <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.1.0.min.js"></script>
        <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
        <script src="http://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
  

}
