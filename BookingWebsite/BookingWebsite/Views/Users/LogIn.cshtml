@model UsersLogInVM

<div class="container">
    <form asp-controller="users" asp-action="login">
        <div class="form-group row">
            <label asp-for="Username" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Username" />
                <span style="color: red" asp-validation-for="Username"></span> <br />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Password" />
                <span style="color: red" asp-validation-for="Password"></span> <br />
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <input type="submit" class="btn btn-primary" value="Log in" />
            </div>
        </div>
    </form>
</div>