@model UsersLogInVM

<div class="title">Log in</div>
<div class="subtitle">Please log in for full access to our service</div>
<div class="container">
    <form asp-controller="users" asp-action="login"><br />
        <div class="form-group row">
            <label asp-for="Username" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Username" />
                <span style="color: red" asp-validation-for="Username"></span> <br />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Password" />
                <span style="color: red" asp-validation-for="Password"></span> <br />
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-primary"> Log In </button> <button type="reset" class="btn btn-primary"> Reset </button>
            </div>
        </div>
    </form>
</div>