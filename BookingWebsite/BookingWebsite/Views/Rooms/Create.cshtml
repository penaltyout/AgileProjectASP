@model RoomsCreateVM

<div class="title">Create a room</div>
<div class="subtitle">Here you can create a room. Please fill in the form.</div><br />

        <div class="container">
            <form asp-controller="rooms" asp-action="create">
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Name" />
                        <span style="color:red" asp-validation-for="Name"></span> <br />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Number" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Number" />
                        <span style="color:red" asp-validation-for="Number"></span> <br />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Size" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Size" />
                        <span style="color:red" asp-validation-for="Size"></span> <br />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Price" />
                        <span style="color:red" asp-validation-for="Price"></span> <br />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Description" />
                        <span style="color:red" asp-validation-for="Description"></span> <br />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Statuscode" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Statuscode" />
                        <span style="color:red" asp-validation-for="Statuscode"></span> <br />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="offset-sm-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Create</button> <button type="reset" class="btn btn-primary">Reset</button>
                    </div>
                </div>
            </form>
        </div>